<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.OptimusxAct.Guide.NewRingActivity" >
	<android.support.v7.widget.Toolbar
		android:id="@+id/act_new_ring_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
   	<TextView
        android:id="@+id/act_new_ring_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_new_ring_toolbar"
        android:text="@string/near_by_devices"
        android:textSize="20sp" />
	<ListView
        android:id="@+id/act_new_ring_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/act_new_ring_tv" >
	</ListView>
</RelativeLayout>
