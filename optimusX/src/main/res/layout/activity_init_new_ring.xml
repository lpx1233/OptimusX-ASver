<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.OptimusxAct.Guide.InitNewRingActivity" >
	<android.support.v7.widget.Toolbar
		android:id="@+id/act_init_ring_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/act_init_ring_pwd_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="原始密码(新设备请输入0000)"
        android:inputType="numberPassword"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入设备密码:"
        android:textSize="34sp"
        android:layout_below="@+id/act_init_ring_sid_tv"
        android:layout_marginTop="48dp"
        android:layout_alignStart="@+id/textView1" />

    <TextView
        android:id="@+id/act_init_ring_sid_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:CC:FF:00:CC:FF"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView1"
        android:layout_toEndOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="320dp"
        android:text="设备SID为:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/act_init_ring_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/act_init_ring_toolbar"
        android:layout_marginTop="112dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:hint="设备名称"
        android:ems="6"
        android:textSize="34sp"
        android:textColor="@color/primary_text"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:textSize="20sp"
        android:hint="新密码"
        android:textColor="@color/primary_text"
        android:id="@+id/act_init_ring_new_pwd_et"
        android:layout_below="@+id/act_init_ring_pwd_et"
        android:layout_alignStart="@+id/act_init_ring_pwd_et"
        android:layout_alignEnd="@+id/act_init_ring_pwd_et" />

</RelativeLayout>