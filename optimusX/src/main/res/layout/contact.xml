<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/contact_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#CCCCCC"
        app:cardUseCompatPadding="true">
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

        	<TextView
        	    android:id="@+id/contact_name"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
        	    android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:textSize="34sp"
                android:text="李培轩"
                android:textColor="@color/primary_text"/>

        	<ImageButton
        	    android:id="@+id/remove_contact"
        	    style="?android:attr/borderlessButtonStyle"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
                android:src="@drawable/ic_action_remove"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/action_smsto"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12021245"
                android:id="@+id/contact_schnum"
                android:textSize="20sp"
                android:textColor="@color/primary_text"
                android:layout_alignBottom="@+id/contact_name"
                android:layout_toEndOf="@+id/contact_name"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:src = "@drawable/phone"
                android:layout_below="@+id/contact_name"
                android:layout_marginTop="16dp"
                android:layout_alignStart="@+id/contact_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15652916090"
                android:id="@+id/contact_phonenum"
                android:textSize="28sp"
                android:layout_alignTop="@+id/imageView7"
                android:layout_alignParentStart="true"
                android:layout_marginStart="72dp"
                android:textColor="@color/primary_text" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/action_call"
                android:layout_below="@+id/contact_phonenum"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_action_call"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="打电话"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/action_smsto"
                android:layout_alignTop="@+id/action_call"
                android:drawableStart="@drawable/ic_action_chat"
                android:text="发短信"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_toEndOf="@+id/action_call" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New!"
                android:id="@+id/text_new"
                android:textColor="@color/accent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
